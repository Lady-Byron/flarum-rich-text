{
  "name": "askvortsov/flarum-rich-text",
  "description": "Rich Text Editor for Flarum",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^0.1.0-beta.16",
    "flarum/markdown": "^0.1.0-beta.16"
  },
  "authors": [
    {
      "name": "Alexander Skvortsov",
      "email": "askvortsov@flarum.org",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Askvortsov\\RichText\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Rich Text",
      "category": "formatting",
      "icon": {
        "name": "fas fa-pen",
        "backgroundColor": "#00CED1",
        "color": "#fff"
      }
    }
  }
}
